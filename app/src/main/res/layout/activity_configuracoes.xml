<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:orientation="vertical"
    tools:context=".activities.ConfiguracoesActivity">

    <RelativeLayout
        android:id="@+id/menu_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_r24"
            android:backgroundTint="?android:colorAccent"
            android:contentDescription="@string/abrir_estatisticas"
            android:elevation="2dp"
            android:padding="12dp"
            android:src="@drawable/round_arrow_back_ios_24" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:minHeight="165dp">

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-80dp"
            android:background="@drawable/rounded_r24"
            android:backgroundTint="?android:colorAccent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:rotation="-10" />

        <TextView
            android:id="@+id/bem_vindo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="32dp"
            android:text="@string/mude_as_configura_es"
            android:textAlignment="textEnd"
            android:textColor="?android:textColor"
            android:textSize="48sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_holder"
        android:alpha=".1"
        android:background="?android:textColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_holder">

        <LinearLayout
            android:id="@+id/settings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>